<h1>Listing cuisines</h1>

  <%= form_tag cuisines_path, :method => :get do %>
  <p>
      <%= label_tag(:cuisine_search, "Cuisine:") %>
      <%= select_tag(:cuisine_search, options_from_collection_for_select(Cuisine.all, :name, :name), multiple: true) %>
    </p>
    <%= submit_tag "Search", :name => nil %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Restaurant</th>
    </tr>
  </thead>

  <tbody>
    <% @cuisines.each do |cuisine| %>
      <tr>
        <td><%= cuisine.name %></td>
          <%  cuisine.restaurants.each do |r| %>
            <td><%= r.name %></td>
          <% end %>

      
        
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

