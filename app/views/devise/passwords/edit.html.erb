
<div class="sign-up-section">
  <div class="section-wrapper">
    <ul class="safe-fare-breadcrumb">
        <li><a href="/">Home > </a></li>
        <li><a href="/for-restaurants" class=''>For Restaurants ></a></li>
        <li><a href="" class='active'>Reset Password</a></li>
    </ul>
    <div class="col-sm-8 col-xs-12">
      <h2>Reset Password</h2>
        <div class="contact-form">
         <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
              <%= f.error_notification %>
             <%= f.input :reset_password_token, :as => :hidden %>
              <div class="form-row col-sm-12">
                <p class='form-label'>Password</p>
                 <%= f.input :password, :label => "New password", :required => true,label:false, :autofocus => true %>
              </div>
              <div class="form-row col-sm-12">
                <p class='form-label'>Password Confirmation</p>
                 <%= f.input :password_confirmation, :label => "Confirm your new password",label:false, :required => true %>
              </div>
             
             <div class="form-row col-sm-12">
                <%= f.button :submit, "Reset Password", class:'nav-link login padding' %>
              </div>
            <% end %>   
        </div>
    </div>
  </div>
</div>  


