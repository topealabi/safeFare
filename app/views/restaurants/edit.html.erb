<style>
.active{
	display:block;
}
</style>
<div class="edit-restaurant-section">
	<div class="section-wrapper">
		<% if current_user.id != @restaurant.user_id %>
			<p> This restaurant does not belong to you </p>
		<% else %>
			<% if @restaurant.approved != true %>
				<h5> This Restaurant has <span style='color:red'> Not Yet </span> Been Approved by The SafeFARE Staff </h5>
			<% end %> 
			<h2 class="orange-header"><%=@restaurant.name%></h2>
			<span> <%= link_to "Delete", user_restaurant_path(current_user, @restaurant), :method => :delete, :class => 'action' %>
			<%= render 'edit_restaurant_form' %>
		<%end%>
		<div style='clear:both'></div>	
	</div>
</div>
