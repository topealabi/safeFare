<h1>Listing restaurants</h1>

<%= form_tag user_restaurants_path, :method => :get do %>
  <p>
  <%= label_tag(:addy, "address:") %>
  <%= text_field_tag :addy, params[:addy] %>
  </p>
  <p>
 <%= label_tag(:hood_search, "Neighborhood:") %>
  <%= select_tag(:hood_search, options_from_collection_for_select(Neighborhood.all, :name, :name), multiple: true) %>
  </p>
  <p>
  <%= label_tag(:city, "City:") %>
  <%= text_field_tag :city, params[:city] %>
  </p>
  <%= label_tag(:state_search, "State:") %>
    <%= select_tag(:state_search, options_from_collection_for_select(State.all, :abbreviation, :abbreviation)) %>
  </p>
  <p>
    <%= label_tag(:zip, "Zip:") %>
    <%= text_field_tag :zip, params[:zip] %>
  </p>
  <p>
    <%= label_tag(:within, "Within:") %>
    <%= select_tag(:within, "<option>5 miles</option><option>10 miles</option><option>15 miles</option>".html_safe) %>
  </p>
  <%= submit_tag "Search", :name => nil %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Location</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>

        <td><%= restaurant.address %></td>
        <td><%= restaurant.city %></td>
        <td><%= restaurant.state %></td>
        <td><%= restaurant.zip %></td>
        <td><%= restaurant.email %></td>
        <td><%= restaurant.phone %></td>
        <td><%= restaurant.hours %></td>
        <td><%= restaurant.website %></td>
        <td><%= restaurant.facebook_url %></td>
        <td><%= restaurant.twitter_url %></td>
        <td><%= restaurant.allergy_eats_url %></td>
        <td><%= restaurant.total_employees %></td>
        <td><%= restaurant.percent_aware %></td>
        <td><%= restaurant.description %></td>
        <td><%= restaurant.is_visible? %></td>
        <td><%= link_to 'Show', user_restaurants_path %></td>
      </tr>
    <% end %>
  </tbody>
</table>

