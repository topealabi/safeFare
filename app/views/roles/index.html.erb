<h1>Listing roles</h1>

  <%= form_tag roles_path, :method => :get do %>
  <p>
    <%= label_tag(:worker_role, "Chef") %>
    <%= check_box_tag :worker_role, Role.find(1).role %>
    <%= label_tag(:worker_role, "Server") %>
    <%= check_box_tag :worker_role, Role.find(2).role %>
  </p>
    <%= submit_tag "Search", :name => nil %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Role</th>
      <th>Restaurant</th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |roley| %>
      <tr>
        <td><%= roley.role %></td>
          <%  roley.aware_employees.each do |r| %>
            <td><%= r.restaurant.name %></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
